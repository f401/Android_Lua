<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/cyan</item>
    </style>

    <style name="scrollbars_wrapper">
        <item name="android:scrollbars">horizontal|vertical</item>
        <item name="android:scrollbarThumbHorizontal">@color/dark_gray</item>
        <item name="android:scrollbarThumbVertical">@color/dark_gray</item>
        <item name="android:scrollbarTrackHorizontal">@color/light_gray</item>
        <item name="android:scrollbarTrackVertical">@color/light_gray</item>
    </style>

</resources>
